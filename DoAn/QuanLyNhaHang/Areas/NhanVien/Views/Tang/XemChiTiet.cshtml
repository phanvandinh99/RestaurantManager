@using QuanLyNhaHang.Models
@model Tang
@{
    ViewBag.Title = "XemChiTiet";
    Layout = "~/Areas/NhanVien/Views/Shared/_LayoutNhanVien.cshtml";
}

<div class="container">
    <div class="page-title-container">
        <div class="row g-0">
            <div class="col-auto mb-3 mb-md-0 me-auto">
                <div class="w-auto sw-md-30">
                    <h1 class="mb-0 pb-0 display-4" id="title">Chi Tiết Tầng</h1>
                </div>
            </div>
        </div>
    </div>
    <div class="mb-5">
        <h2 class="small-title">Thông Tin Chi Tiết Tầng</h2>
        <div class="card mb-2">
            <div class="row g-0 card-body">
                <div class="col">
                    <div class="ps-4">
                        <div class="row mb-1">
                            <div class="col">
                                <div class="heading text-primary mb-1">Mã Bàn: @Model.MaTang</div>
                                <div class="mb-3">Tên Bàn: @Model.TenTang</div>
                                <div class="mb-3">Tổng Số Bàn: @ViewBag.Tang</div>
                            </div>
                            <div>
                                <a href="/NhanVien/Tang/DanhSachTang" class="btn btn-danger">Trở Về</a>
                                <a href="/NhanVien/Tang/CapNhat?iMaTang=@Model.MaTang" class="btn btn-primary">Cập Nhật</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>