@using QuanLyNhaHang.Models
@model List<Ban>
@{
    ViewBag.Title = "Danh Sách Bàn Ăn";
    Layout = "~/Areas/NhanVien/Views/Shared/_LayoutNhanVien.cshtml";
}
<div class="container">
    <div class="page-title-container">
        <div class="row">
            <div class="col-12 col-md-7">
                <h1 class="mb-0 pb-0 display-4" id="title">Bàn @ViewBag.Tang</h1>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="d-flex">
                <div class="dropdown-as-select me-3" data-setactive="false" data-childselector="span" style="display:none">
                    <a class="pe-0 pt-0 align-top lh-1 dropdown-toggle" href="#" data-bs-toggle="dropdown" aria-expanded="false" aria-haspopup="true">
                        <span class="small-title"></span>
                    </a>
                    <div class="dropdown-menu font-standard">
                        <div class="nav flex-column" role="tablist">
                            <a class="active dropdown-item text-medium" href="#" aria-selected="true" role="tab">Today's</a>
                            <a class="dropdown-item text-medium" href="#" aria-selected="false" role="tab">Weekly</a>
                            <a class="dropdown-item text-medium" href="#" aria-selected="false" role="tab">Monthly</a>
                            <a class="dropdown-item text-medium" href="#" aria-selected="false" role="tab">Yearly</a>
                        </div>
                    </div>
                </div>
                <h2 class="small-title">Danh sách bàn ăn @ViewBag.Tang</h2>
            </div>
            <div class="mb-5">
                <div class="row g-2">
                    <!-- #region Hiển thị bàn -->
                    @foreach (var item in Model)
                    {
                        <div class="col-6 col-md-4 col-lg-2">
                            @if (item.TinhTrang == 0) // 0: không có người
                            {
                                <a href="~/NhanVien/HoaDon/ThongTinHoaDon?iMaBan=@item.MaBan">
                                    <div class="card h-100 hover-scale-up cursor-pointer">
                                        <div class="card-body d-flex flex-column align-items-center">
                                            <div class="sw-6 sh-6 rounded-xl d-flex justify-content-center align-items-center border border-primary mb-4">
                                                <i data-cs-icon="screen" class="text-primary"></i>
                                            </div>
                                            <div class="text-primary cta-4">@item.TenBan</div>

                                            <div style="color:black!important" class="mb-1 d-flex align-items-center text-alternate text-small lh-1-25">TRỐNG - [@item.SoGhe ghế]</div>
                                        </div>
                                    </div>
                                </a>

                            }
                            else
                            {
                                <a href="~/NhanVien/HoaDon/ThongTinHoaDon?iMaBan=@item.MaBan">
                                    <div class="card h-100 hover-scale-up cursor-pointer" style="background-color: #ff000021;">
                                        <div class="card-body d-flex flex-column align-items-center">
                                            <div class="sw-6 sh-6 rounded-xl d-flex justify-content-center align-items-center border border-primary mb-4">
                                                <i data-cs-icon="screen" class="text-primary"></i>
                                            </div>
                                            <div class="text-primary cta-4">@item.TenBan</div>

                                            <div style="color:black!important" class="mb-1 d-flex align-items-center text-alternate text-small lh-1-25">CÓ NGƯỜI - [@item.SoGhe ghế]</div>
                                        </div>
                                    </div>
                                </a>
                            }
                        </div>
                    }
                    <!-- #endregion -->
                </div>
            </div>
        </div>
    </div>
</div>
