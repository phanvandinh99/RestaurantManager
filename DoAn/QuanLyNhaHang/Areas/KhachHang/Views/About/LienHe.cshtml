
@{
    ViewBag.Title = "Trang Liên Hệ";
    Layout = "~/Areas/KhachHang/Views/Shared/_LayoutKhachHang.cshtml";
}

<div class="body-wrapper">
    <!-- ===================page banner============ -->
    <div class="page-banner" data-background="/Assets/KhachHang/assets/img/page-ban-bg.png">
        <!-- container  -->
        <div class="container">
            <!-- row  -->
            <div class="row">
                <div class="page-ban-content">
                    <h1 class="page-head" data-aos="fade-up" data-aos-duration="1000">LIÊN HỆ</h1>
                    <div class="breadcrumb-list" data-aos="fade-up" data-aos-duration="1500">
                        <a href="/KhachHang/Home/Index" class="page-route-link">Trang Chủ</a>
                        <span class="devider">/</span>
                        <span>Trang Liên Hệ</span>

                    </div>
                </div>
            </div>
            <!-- row end  -->
        </div>
        <!-- container end -->
    </div>
    <!-- ===================page banner end============ -->
    <!-- ===========contact============ -->
    <div class="contact cpy-6" data-aos="fade-up" data-aos-duration="1000">
        <div class="container">
            <div class="form-wrapper inner">
                <div class="row">
                    <div class="col-xl-8">
                        <div class="form-inside">
                            <div class="form-head" data-aos="fade-up" data-aos-duration="1000">
                                <div class="section-head text-center">
                                    <span class="sm-title ">LIÊN HỆ</span>
                                    <h2 class="sec-title">
                                        Để lại thông tin liên hệ
                                    </h2>
                                </div>
                            </div>
                            <div class="row">
                                <div class="contact-form pt-15" data-aos="fade-up" data-aos-duration="1500">
                                    <form action="/KhachHang/Home/Index" method="post" id="contact-message">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="input-group flex-nowrap mb-30">
                                                    <input type="text" class="form-control" placeholder="Họ Tên *">
                                                    <span class="right-input-icon"><i class="icofont-ui-user"></i></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="input-group flex-nowrap mb-30">
                                                    <input type="email" class="form-control" placeholder="Email *">
                                                    <span class="right-input-icon"><i class="icofont-email"></i></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="input-group flex-nowrap mb-30">
                                                    <input type="text" class="form-control" placeholder="Số điện thoại liên hệ *">
                                                    <span class="right-input-icon"><i class="icofont-phone"></i></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="input-group flex-nowrap mb-30">
                                                    <input type="text" class="form-control" placeholder="Địa chỉ *">
                                                    <span class="right-input-icon"><i class="icofont-location-pin"></i></span>
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <textarea name="message" class="form-control" placeholder="Comment *" rows="5"></textarea>
                                            </div>
                                        </div>
                                        <div class="submit-button-sec mt-30">
                                            <button type="submit" onclick="myFunction()" class="custom-btn">
                                                Gửi
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-4" data-aos="fade-up" data-aos-duration="1000">
                        <div class="contact-offer">
                            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3928.84145437717!2d105.76804037756133!3d10.029938972513698!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31a0895a51d60719%3A0x9d76b0035f6d53d0!2zVHLGsOG7nW5nIMSQ4bqhaSBo4buNYyBD4bqnbiBUaMah!5e0!3m2!1svi!2s!4v1700151830216!5m2!1svi!2s" width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ========================contact================== -->
</div>

